---
import Layout from '../layouts/Layout.astro';
import Main from '../layouts/Main.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// Import the title image
import ContactTitleImage from '/public/images/title-contact-page1.webp';
---

<Layout title="Contact Us - Ngubi Adventure Forest Camp">
  <Header /> {/* Header will be dark via its own bg-dark-header-footer-bg class */}
  <Main class="bg-surface text-foreground"> {/* ADDED pt-24 bg-surface text-foreground */}
    
    
    {/* Playful Image Title */}
    <h1 class="sr-only">Get In Touch With Us</h1>
    <div class="text-center mb-8 mx-auto max-w-4xl px-4">
        <img
            src={ContactTitleImage.src}
            alt="Get In Touch With Us"
            width={ContactTitleImage.width}
            height={ContactTitleImage.height}
            class="w-full h-auto object-contain"
        />
    </div>

    <p class="text-lg text-center max-w-2xl mx-auto mb-12 text-foreground">
      Have a question about our adventures, services, or conservation programs? We'd love to hear from you! Fill out the form below, or reach out directly, and we'll get back to you as soon as possible.
    </p>

    {/* NEW: Two-Column Container for Form and Side Info */}
    <div class="max-w-4xl mx-auto px-4 grid grid-cols-1 md:grid-cols-2 gap-8 items-start mb-12"> {/* Added mb-12 for space before map */}
      {/* Column 1: Contact Form */}
      <div> {/* This div wraps the form */}
        <h2 class="text-3xl font-bold mb-6 text-accent md:hidden">Send Us a Message</h2> {/* Heading for form on mobile, hidden on desktop if side info has clear heading */}
        <form name="contact" method="POST" data-netlify="true" action="/thank-you" class="p-8 bg-surface rounded-lg shadow-lg"> {/* Removed max-w-xl from form here */}
          <input type="hidden" name="form-name" value="contact" />

          <div class="mb-5">
            <label for="name" class="block text-foreground text-sm font-bold mb-2">Your Name:</label>
            <input type="text" id="name" name="name" required class="appearance-none border rounded w-full py-3 px-4 leading-tight focus:outline-none focus:shadow-outline bg-white text-foreground dark:bg-gray-700 dark:text-white border-border" />
          </div>

          <div class="mb-5">
            <label for="email" class="block text-foreground text-sm font-bold mb-2">Email Address:</label>
            <input type="email" id="email" name="email" required class="appearance-none border rounded w-full py-3 px-4 leading-tight focus:outline-none focus:shadow-outline bg-white text-foreground dark:bg-gray-700 dark:text-white border-border" />
          </div>

          <div class="mb-5">
            <label for="phone" class="block text-foreground text-sm font-bold mb-2">Phone Number (Optional):</label>
            <input type="tel" id="phone" name="phone" class="appearance-none border rounded w-full py-3 px-4 leading-tight focus:outline-none focus:shadow-outline bg-white text-foreground dark:bg-gray-700 dark:text-white border-border" />
          </div>

          <div class="mb-5">
            <label for="message" class="block text-foreground text-sm font-bold mb-2">Your Message:</label>
            <textarea id="message" name="message" rows="6" required class="shadow appearance-none border rounded w-full py-3 px-4 leading-tight focus:outline-none focus:shadow-outline bg-white text-foreground dark:bg-gray-700 dark:text-white border-border"></textarea>
          </div>

          <div class="flex items-center justify-center">
            <button type="submit" class="bg-accent hover:bg-accent-dark text-white font-bold py-3 px-6 rounded-full focus:outline-none focus:shadow-outline transition-colors duration-200">
              Send Message
            </button>
          </div>
        </form>
      </div>

      {/* Column 2: Side Contact Info */}
      <div class="p-8 bg-surface rounded-lg shadow-lg text-foreground"> {/* Container for contact info */}
          <!-- <h2 class="text-2xl font-bold mb-6 text-accent">Reach Out Directly</h2> -->
          

          <div class="mb-6">
              <h3 class="text-xl font-bold mb-2 text-accent">Location:</h3>
              <p class="text-text-muted">Ngubi Forest<br/>Limuru-Maai Mahiu Road<br/>Limuru, Kiambu County, Kenya</p>
          </div>

          <div class="mb-6">
              <h3 class="text-xl font-bold mb-2 text-accent">Working Hours:</h3>
              <p class="text-text-muted">Monday - Sunday: 8 AM - 5 PM</p>
          </div>

          <div class="mb-6">
              <h3 class="text-xl font-bold mb-2 text-accent">Call Us:</h3>
              <div class="flex items-center gap-x-2">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/></svg>
                  <a href="tel:+2547XX000000" class="text-foreground hover:text-accent transition-colors">+254 7XX XXX XXX</a>
              </div>
          </div>

          <div>
              <h3 class="text-xl font-bold mb-2 text-accent">Email Us:</h3>
              <div class="flex items-center gap-x-2">

                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-accent" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-mail"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg>

                  <a href="mailto:info@ngubiadventure.com" class="text-foreground hover:text-accent transition-colors">info@ngubiadventure.com</a>
              </div>
          </div>
      </div>
    </div> {/* Closing div for max-w-4xl grid */}

    {/* Embedded Map Section */}
    <section class="max-w-app mx-auto mt-12 mb-8 px-4"> {/* max-w-app for maps to align with content */}
        <h2 class="text-3xl font-bold mb-6 text-center text-accent">Find Us On The Map</h2>
        <div class="relative" style="padding-bottom: 56.25%;"> {/* 16:9 Aspect Ratio for responsive iframe */}
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m17!1m12!1m3!1d3651.4648879298934!2d36.60864307496526!3d-1.100368998889065!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m2!1m1!2zMcKwMDYnMDEuMyJTIDM2wrAzNic0MC40IkU!5e1!3m2!1sen!2ske!4v1752139646492!5m2!1sen!2ske"/* Placeholder embed URL */
            width="100%"
            height="100%"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            class="absolute top-0 left-0 w-full h-full rounded-lg shadow-lg"
            title="Location of Ngubi Forest Camp"
          ></iframe>
        </div>
    </section>





  </Main>
  <Footer /> {/* Footer will be dark via its own bg-dark-header-footer-bg class */}
</Layout>