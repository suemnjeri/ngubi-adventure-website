---
import Layout from '../../layouts/Layout.astro';
import Main from '../../layouts/Main.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import LinkButton from '../../components/LinkButton.astro';

// Import the playful title image for the whole page
import GroupAdventureTitleImage from '/public/images/title-group-adventure-page.webp';
// Import images for each section
import CampingImage from '/public/images/camping-image1.webp';
import DayAdventuresImage from '/public/images/day-adventures-image1.webp';
import TeambuildingImage from '/public/images/teambuilding-zigzag-1.webp';
---
<Layout title="Group Adventure & Camping - Ngubi Adventure Forest Camp">
  <Header />
  <Main pageTitle=""
    pageDesc="" class="pt-24 bg-surface text-foreground">

    {/* Playful Image Title for Combined Services */}
    <h1 class="sr-only">Group Adventure & Camping</h1>
    <div class="text-center mb-2 mx-auto max-w-4xl px-4">
        <img
            src={GroupAdventureTitleImage.src}
            alt="Group Adventure & Camping"
            width={GroupAdventureTitleImage.width}
            height={GroupAdventureTitleImage.height}
            class="w-full h-auto object-contain"
        />
    </div>

    {/* Introduction with Quote */}
    <section class="mb-2">
      <p class="text-lg text-center text-text-muted max-w-2xl mx-auto">
        Build unforgettable memories and lasting bonds in the heart of Ngubi Forest. Our programs are designed for groups of all kinds, blending thrilling day adventures with the serene magic of a forest camping experience.
      </p>
      <blockquote class="text-xl italic font-light text-center text-foreground mt-8 px-4 border-l-4 border-accent pl-4 max-w-xl mx-auto">
        "The strength of the team is each individual member. The strength of each member is the team."
        <cite class="block text-sm not-italic mt-2">- Phil Jackson</cite>
      </blockquote>
    </section>

    {/* Section 1: Camping */}
    <section id="camping" class="max-w-app mx-auto px-4 py-8 sm:py-12 flex flex-col md:flex-row items-center md:space-x-8 mb-12">
      <div class="md:w-1/2 mb-6 md:mb-0 relative rounded-lg overflow-hidden shadow-lg aspect-w-1 aspect-h-1 md:aspect-w-3 md:aspect-h-4">
        <img src={CampingImage.src} alt="Group camping in Ngubi forest" class="w-full h-full object-cover rounded-lg">
        <div class="absolute inset-0 bg-black opacity-20 rounded-lg"></div>
      </div>
      <div class="md:w-1/2 text-text-muted">
        <h2 class="text-2xl font-bold mb-4 text-accent">Overnight Camping</h2>
        <p class="mb-4">
          Spend a night under the stars and fully immerse yourself in the forest's natural rhythm. Our camping packages are perfect for youth groups, clubs, or church members, offering a safe and equipped site. We provide delicious meals and guided activities, but small groups can also bring their own food to cook.
        </p>
        <p class="mb-4">
          <strong>Includes:</strong> Campsite access, clean facilities, guided activities, bonfire, and optional catered meals.
        </p>
        <div class="text-center md:text-left mt-8">
            <LinkButton
                href="/booking"
                class="inline-block px-8 py-4 text-lg bg-accent text-white rounded-full font-semibold whitespace-nowrap hover:bg-accent-dark hover:text-white transition-colors duration-200 shadow-lg"
                ariaLabel="Book Your Camping Adventure"
                title="Book Your Camping Adventure"
            >
                Book Now
            </LinkButton>
        </div>
      </div>
    </section>

    {/* Section 2: Day Adventures */}
    <section id="day-adventures" class="max-w-app mx-auto px-4 py-8 sm:py-12 flex flex-col md:flex-row-reverse items-center md:space-x-reverse md:space-x-8 mb-12">
      <div class="md:w-1/2 mb-6 md:mb-0 relative rounded-lg overflow-hidden shadow-lg aspect-w-1 aspect-h-1 md:aspect-w-3 md:aspect-h-4">
        <img src={DayAdventuresImage.src} alt="Youth group exploring the forest" class="w-full h-full object-cover rounded-lg">
        <div class="absolute inset-0 bg-black opacity-20 rounded-lg"></div>
      </div>
      <div class="md:w-1/2 text-text-muted">
        <h2 class="text-2xl font-bold mb-4 text-accent">Group Day Adventures</h2>
        <p class="mb-4">
          For groups looking for an exciting day of fun and exploration without staying overnight. Our day adventure programs are perfect for school trips or community outings, blending active games with enriching nature activities.
        </p>
        <p class="mb-4">
          <strong>Includes:</strong> Guided trail walks, scavenger hunts, conservation activities, and a catered lunch.
        </p>
        <div class="text-center md:text-left mt-8">
            <LinkButton
                href="/booking"
                class="inline-block px-8 py-4 text-lg bg-accent text-white rounded-full font-semibold whitespace-nowrap hover:bg-accent-dark hover:text-white transition-colors duration-200 shadow-lg"
                ariaLabel="Book Your Group Day Adventure"
                title="Book Your Group Day Adventure"
            >
                Book Now
            </LinkButton>
        </div>
      </div>
    </section>

    {/* Section 3: Team Building */}
    <section id="teambuilding" class="max-w-app mx-auto px-4 py-8 sm:py-12 flex flex-col md:flex-row items-center md:space-x-8 mb-12">
      <div class="md:w-1/2 mb-6 md:mb-0 relative rounded-lg overflow-hidden shadow-lg aspect-w-1 aspect-h-1 md:aspect-w-3 md:aspect-h-4">
        <img src={TeambuildingImage.src} alt="Team collaborating on an obstacle course" class="w-full h-full object-cover rounded-lg">
        <div class="absolute inset-0 bg-black opacity-20 rounded-lg"></div>
      </div>
      <div class="md:w-1/2 text-text-muted">
        <h2 class="text-2xl font-bold mb-4 text-accent">Corporate Team Building</h2>
        <p class="mb-4">
          Forge stronger bonds and unleash collective potential with our bespoke team building programs. Designed for corporate groups, these challenges foster communication, trust, and creative problem-solving in an unforgettable natural setting.
        </p>
        <p class="mb-4">
          <strong>Includes:</strong> Ground-based obstacle courses, forest trail quests, custom team challenges, and a catered lunch.
        </p>
        <div class="text-center md:text-left mt-8">
            <LinkButton
                href="/booking"
                class="inline-block px-8 py-4 text-lg bg-accent text-white rounded-full font-semibold whitespace-nowrap hover:bg-accent-dark hover:text-white transition-colors duration-200 shadow-lg"
                ariaLabel="Book Your Team Building Event"
                title="Book Your Team Building Event"
            >
                Book Now
            </LinkButton>
        </div>
      </div>
    </section>

    {/* Call to Action & Inquiry Section (Updated) */}
    <section class="max-w-app mx-auto px-4 py-8 sm:py-12 text-center">
      <h2 class="text-3xl font-bold mb-6 text-accent">Ready for a Group Adventure?</h2>
      <p class="text-lg text-text-muted mb-8 max-w-2xl mx-auto">
        Book an overnight camping trip, a day of thrilling adventures, or a customized team-building program today.
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <LinkButton
          href="/booking"
          class="inline-block px-8 py-4 text-lg bg-accent text-white rounded-full font-semibold whitespace-nowrap hover:bg-accent-dark hover:text-white transition-colors duration-200 shadow-lg"
          ariaLabel="Book Your Group Adventure"
          title="Book Your Group Adventure"
        >
          Book Now
        </LinkButton>
        <LinkButton
          href="/contact"
          class="inline-block px-8 py-4 text-lg bg-white text-accent rounded-full font-semibold whitespace-nowrap hover:bg-gray-200 hover:text-accent transition-colors duration-200 shadow-lg"
          ariaLabel="Contact Us For More Info"
          title="Contact Us For More Info"
        >
          Contact Us For More Info
        </LinkButton>
      </div>
    </section>

  </Main>
  <Footer />
</Layout>